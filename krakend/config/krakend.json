{
  "version": 3,
  "name": "CSDS383 API Gateway",
  "timeout": "3000ms",
  "cache_ttl": "0s",
  "output_encoding": "json",
  "port": 8080,
  "endpoints": [
    {
      "endpoint": "/api/products",
      "method": "GET",
      "output_encoding": "json",
      "cache_ttl": "0s",
      "backend": [
        {
          "url_pattern": "/products",
          "host": ["http://product-service:8002"],
          "encoding": "json",
          "is_collection": true
        }
      ],
      "extra_config": {
        "qos/http-cache": {
          "shared": false
        }
      }
    },
    {
      "endpoint": "/api/products/{product_id}",
      "method": "GET",
      "backend": [
        {
          "url_pattern": "/products/{product_id}",
          "host": ["http://product-service:8002"]
        }
      ]
    },
    {
      "endpoint": "/api/products",
      "method": "POST",
      "backend": [
        {
          "url_pattern": "/products",
          "host": ["http://product-service:8002"]
        }
      ]
    },
    {
      "endpoint": "/api/products/{product_id}",
      "method": "PUT",
      "backend": [
        {
          "url_pattern": "/products/{product_id}",
          "host": ["http://product-service:8002"]
        }
      ]
    },
    {
      "endpoint": "/api/products/{product_id}",
      "method": "PATCH",
      "backend": [
        {
          "url_pattern": "/products/{product_id}",
          "host": ["http://product-service:8002"]
        }
      ]
    },
    {
      "endpoint": "/api/products/{product_id}",
      "method": "DELETE",
      "backend": [
        {
          "url_pattern": "/products/{product_id}",
          "host": ["http://product-service:8002"],
          "encoding": "no-op"
        }
      ]
    },
    {
      "endpoint": "/api/products/{product_id}/suppliers/{supplier_id}",
      "method": "POST",
      "backend": [
        {
          "url_pattern": "/products/{product_id}/suppliers/{supplier_id}",
          "host": ["http://product-service:8002"]
        }
      ]
    },
    {
      "endpoint": "/api/products/{product_id}/suppliers/{supplier_id}",
      "method": "DELETE",
      "backend": [
        {
          "url_pattern": "/products/{product_id}/suppliers/{supplier_id}",
          "host": ["http://product-service:8002"]
        }
      ]
    },
    {
      "endpoint": "/api/products/{product_id}/categories/{category_id}",
      "method": "POST",
      "backend": [
        {
          "url_pattern": "/products/{product_id}/categories/{category_id}",
          "host": ["http://product-service:8002"]
        }
      ]
    },
    {
      "endpoint": "/api/products/{product_id}/categories/{category_id}",
      "method": "DELETE",
      "backend": [
        {
          "url_pattern": "/products/{product_id}/categories/{category_id}",
          "host": ["http://product-service:8002"]
        }
      ]
    },
    {
      "endpoint": "/api/products/{product_id}/images/{image_id}",
      "method": "POST",
      "backend": [
        {
          "url_pattern": "/products/{product_id}/images/{image_id}",
          "host": ["http://product-service:8002"]
        }
      ]
    },
    {
      "endpoint": "/api/products/{product_id}/images/{image_id}",
      "method": "DELETE",
      "backend": [
        {
          "url_pattern": "/products/{product_id}/images/{image_id}",
          "host": ["http://product-service:8002"]
        }
      ]
    }
  ],
  "extra_config": {
    "security/cors": {
      "allow_origins": [
        "http://localhost:5173",
        "http://localhost:3000"
      ],
      "allow_methods": [
        "GET",
        "POST",
        "PUT",
        "PATCH",
        "DELETE",
        "OPTIONS"
      ],
      "allow_headers": [
        "Content-Type",
        "Authorization",
        "Cache-Control"
      ],
      "expose_headers": [
        "Content-Length",
        "Content-Type"
      ],
      "max_age": "12h"
    },
    "router": {
      "return_error_msg": true
    }
  }
}